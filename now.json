{
  "version": 2,
  "builds": [
    { "src": "**/apis/*/index.js", "use": "@now/node" }
  ],
  "routes": [
      { "src": "/(.*)/hook/(.*)", "dest": "/src/apis/$1/hooks/$2.js" },
      { "src": "/(.*)/(.*)/(.*)", "dest": "/src/apis/$1/index.js" },
      { "src": "/(.*)/(.*)", "dest": "/src/apis/$1/index.js" },
      { "src": "/(.*)", "dest": "/src/apis/$1/index.js" }
  ],
  "env": {
    "STREAMING_HOST": "@streaming_host",
    "STREAMING_KEY": "@streaming_key",
    "STREAMING_CODE": "@streaming_code"
  }
}